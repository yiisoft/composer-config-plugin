{
    "name": "yiisoft/composer-config-plugin",
    "type": "composer-plugin",
    "description": "Composer plugin for config assembling",
    "keywords": [
        "composer",
        "config",
        "assembling",
        "plugin"
    ],
    "homepage": "https://github.com/yiisoft/composer-config-plugin",
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/yiisoft/composer-config-plugin/issues?state=open",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/composer-config-plugin"
    },
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "composer-plugin-api": "^1.0|^2.0",
        "composer/composer": "~1.0|~2.0@dev",
        "opis/closure": "3.6.x-dev@dev",
        "riimu/kit-phpencoder": "^2.4",
        "yiisoft/arrays": "3.0.x-dev",
        "yiisoft/files": "^3.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3"
    },
    "suggest": {
        "vlucas/phpdotenv": "^2.0 for `.env` files support",
        "symfony/yaml": "^2.0 || ^3.0 || ^4.0 for YAML files support"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Composer\\Config\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Composer\\Config\\Tests\\": "tests"
        }
    },
    "extra": {
        "class": "Yiisoft\\Composer\\Config\\ComposerEventHandler",
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
